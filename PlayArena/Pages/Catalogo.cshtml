@page
@using Models
@model PlayArena.Pages.CatalogoModel
@{
    var Lista = Model.listajogo;
}

<div class="py-5">
    <div class="container">
        <div class="d-flex justify-content-center align-items-center">
            <h2 class="">PlayArena</h2>
            <div class="d-flex justify-content-center align-items-center ms-1">
                <img class="img-catalogo" src="~/img/iconegrandeplayarena.svg" />
            </div>
        </div>

        <div class="text-lg-start mb-2">
            <p class="pesquisar">Pesquisar</p>
            <div class="">
            <form class="form-inline my-2 my-lg-0">
                <img class="position-absolute mt-2 ms-2" id="lupa" src="~/img/material-symbols--search.png" />
                <input name="pesquisar" class="input-search mr-sm-2" id="searchInput" type="text">
            </form>
            </div>
        </div>   
        
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-6 g-0">
            @if (Lista != null)
            {
                @foreach (var jogo in Lista)
                {
                    <a class="text-decoration-none cardscatalogo" asp-route-id="@jogo.Id" asp-page="/telajogo">
                        <div class="my-4">
                            @if (jogo.Capa != null)
                            {
                                <img src="@jogo.Capa" class="" style="width: 170px; height: 200px" /> 
                            }
                            else
                            {
                                <img src="..." class="" />
                            }
                            <div class="mt-3 mb-5">
                                <h5 class="">@jogo.Nome</h5>
                            </div>   
                        </div>  
                    </a>
                }
            }
        </div>
    </div>
</div>    