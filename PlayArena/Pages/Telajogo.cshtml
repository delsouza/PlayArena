@page 
@using Models
@model PlayArena.Pages.TelajogoModel
@{
	var jogo = Model.jogo;
	var requisitos = Model.requisitos;
	var imagemJogo = Model.imagemJogo;
}

<div class="justify-content-lg-start d-flex">
	<img class="fotovoltar mt-5 me-1" src="~/img/weui--back-filled.png" width="14" height="20" />
	<a class="btnvoltar" asp-page="./Catalogo"> Voltar</a>
</div>
<div class="d-flex justify-content-between mt-5">
	<div class="d-flex contaider-esquerda container">
		<div class="">
			<div class="d-flex">
				<img src="@jogo.Capa" class="" style="width: 230px; height: 300px" />
				<div class="ms-4">
					<div class="mb-3">
						<span class="detalhes-jogo">Desenvolvedora:</span>
						<span class="informacoes-jogo">@jogo.Empresa</span>
					</div>
					<div class="mb-3">
						<span class="detalhes-jogo">Gênero:</span>
						<span class="informacoes-jogo">@jogo.Genero</span>
					</div>
					<div class="mb-3">
						<span class="detalhes-jogo">Data de lançamento:</span>
						<span class="informacoes-jogo">@jogo.DataLancamento.ToString("dd/MM/yyyy")</span>
					</div>
					<div class="">
						<span class="detalhes-jogo">Quantidade disponível:</span>
						<span class="informacoes-jogo">@jogo.QuantidadeDisponivel</span>
					</div>

					<button class="btncompra mt-4" id="botaoAluguel">Alugar: @jogo.PrecoAluguel</button>
					<button class="btncompra mt-4" id="botao">Comprar: @jogo.Preco</button>
					
					<dialog class="popup" id="modalCompraId">
						<p class="termos">Aceite os termos e condições</p>

						<label class="containercheckbox textocheckbox">
							Política de privacidade
							<input type="checkbox" id="myCheckbox">
							<span class="checkmark"></span>
						</label>

						<label class="containercheckbox textocheckbox">
							Termos de responsabilidade
							<input type="checkbox" id="myCheckbox">
							<span class="checkmark"></span>
						</label>

						<label class="containercheckbox textocheckbox">
							Conduta de reembolso
							<input type="checkbox" id="myCheckbox">
							<span class="checkmark"></span>
						</label>

						<button class="btn-compra-termo" id="botao">Comprar</button>
					</dialog>

					<dialog class="popup" id="modalAluguelId">
						<p class="termos">Aceite os termos e condições</p>

						<label class="containercheckbox textocheckbox">
							Política de privacidade
							<input type="checkbox" id="myCheckbox">
							<span class="checkmark"></span>
						</label>

						<label class="containercheckbox textocheckbox">
							Termos de responsabilidade
							<input type="checkbox" id="myCheckbox">
							<span class="checkmark"></span>
						</label>

						<label class="containercheckbox textocheckbox">
							Conduta de reembolso
							<input type="checkbox" id="myCheckbox">
							<span class="checkmark"></span>
						</label>

						<button class="btn-compra-termo" id="botaoAluguel">Alugar</button>
					</dialog>
				</div>
			</div>
			<p class="nome-jogo mt-3">@jogo.Nome</p>
			<p class="informacoes-jogo">Requisitos de sistema de @jogo.Nome:</p>
			<p class="informacoes-jogo">Sistema operacional</p>
			<p class="informacoes-jogo">@requisitos.SistemaOperacional</p>

			<p class="informacoes-jogo">Processador</p>
			<p class="informacoes-jogo">@requisitos.Processador</p>
		</div>
	</div>
	<div class="d-flex flex-column container align-items-center">
		<div class="d-flex col-8">
			<div id="carouselExampleAutoplaying" class="carousel slide justify-content-end d-flex" data-bs-ride="carousel">
				<div class="carousel-inner">
					@if (imagemJogo != null)
					{
						for (int i = 0; i < imagemJogo.Count; i++)
						{
							if (i != 0)
							{
								<div class="carousel-item">
									<img src="@imagemJogo[i].URL" class="d-block carousel">
								</div>
							}
							else
							{
								<div class="carousel-item active">
									<img src="@imagemJogo[i].URL" class="d-block carousel">
								</div>
							}
						}
					}
				</div>
				<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>
			</div>
		</div>
		<div class="d-flex flex-column justify-content-end col-8">
			<p class="nome-jogo d-flex text-end mt-4">SOBRE ESTE JOGO:</p>
			<div class="d-flex text-justify justify-content-end">
				<p class="informacoes-jogo mt-1"> @jogo.Descricao</p>
			</div>
		</div>
	</div>
</div>
