@page
@model PlayArena.Pages.CadastroModel
@{
}

<style>
    body {
        background-color: #EDF1F5;
    }
</style>

<div class="container-pai d-flex justify-content-center align-items-center">
    <div class="login-conteiner d-flex justify-content-center align-items-center">
        <form>
            <div class="mb-2">
                <p class="mt-4 titulo-login-cadastro">Cadastro</p>
                <label for="exampleInputEmail1" class="form-label"></label>
                <input type="email" size="200" asp-for="ClienteModel.Email" class="form-control input-informacoes mt-4" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email">
                <div id="emailHelp" class="form-text"></div>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label"></label>
                <input type="text" asp-for="ClienteModel.Nome" class="form-control input-informacoes" id="exampleInputPassword1" placeholder="Nome">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label"></label>
                <input type="text" asp-for="ClienteModel.Endereco" class="form-control input-informacoes" id="exampleInputPassword1" placeholder="Endereço">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label"></label>
                <input type="number" asp-for="ClienteModel.Telefone" class="form-control input-informacoes" id="exampleInputPassword1" placeholder="Telefone">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label"></label>
                <input type="password" asp-for="ClienteModel.Senha" class="form-control input-informacoes" id="exampleInputPassword1" placeholder="Senha">
            </div>
            <button type="submit" class="btn-cadastro-input mt-5 mb-5">Cadastrar</button>
            <p class="mt-4 text-center">Já é membro? <a class="text-decoration-none" asp-page="./login"> Login</a></p>
        </form>
    </div>
</div>

